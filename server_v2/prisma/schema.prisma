enum NotificationStatus {
  READ   @map("read")
  UNREAD @map("unread")
}

model Notification {
  id      Int                @id @default(autoincrement())
  ownerId Int
  level   LogLevel           @default(INFO)
  subject String
  content String
  status  NotificationStatus @default(UNREAD)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notification")
}
